{
  "name": "golden-horse-shipping-server",
  "version": "2.0.0",
  "description": "Backend server for Golden Horse Shipping System",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test SKIP_SERVER_STARTUP=true mocha tests/**/*.test.js --timeout 10000",
    "test:watch": "mocha tests/**/*.test.js --watch --timeout 10000",
    "test:coverage": "nyc mocha tests/**/*.test.js --timeout 10000",
    "test:auth": "mocha tests/auth.test.js --timeout 10000",
    "test:customers": "mocha tests/customers.test.js --timeout 10000",
    "test:financial": "mocha tests/financial.test.js --timeout 10000",
    "test:sales": "mocha tests/sales.test.js --timeout 10000",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:test-connection": "node scripts/test-connection.js",
    "backfill:accounts": "node src/scripts/backfillAccounts.js --dry-run",
    "backfill:accounts:commit": "node src/scripts/backfillAccounts.js --commit",
    "fa:assign-category": "node src/scripts/assignFixedAssetCategory.js --dry-run",
    "fa:assign-category:commit": "node src/scripts/assignFixedAssetCategory.js --commit",
    "dep:run-now": "node src/scripts/runDepreciationNow.js",
    "report:fa-accounts": "node src/scripts/reportFixedAssetAccounts.js",
    "audit:coa": "node src/scripts/coaAudit.js",
    "dep:gen-schedules": "node src/scripts/generateDepSchedules.js",
    "dep:run-local": "node src/scripts/runDepreciationNowLocal.js",
    "coa:rebuild": "node src/scripts/coaRebuild.js --dry-run",
    "coa:rebuild:commit": "node src/scripts/coaRebuild.js --commit --strategy=deactivate",
    "coa:migrate-accdep": "node src/scripts/migrateAccDepParent.js",
    "coa:normalize": "node src/scripts/normalizeAccountHierarchy.js",
    "coa:fix-structure": "node src/scripts/fixCoaStructure.js",
    "db:purge-except-admin": "node src/scripts/purgeExceptAdmin.js",
    "coa:enforce-fa": "node src/scripts/enforceFixedAssetsSingleParent.js",
    "coa:create-full": "node src/scripts/createFullCoA.js",
    "coa:seed-operational": "node src/scripts/seedOperationalAccounts.js",
    "coa:seed-shipping": "node src/scripts/seedShippingCoA.js",
    "coa:seed-fixed-assets": "node src/scripts/seedFixedAssetsCoA.js"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.9.7",
    "os": "^0.1.2",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.3",
    "redis": "^4.6.10",
    "sequelize": "^6.35.1",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "cross-env": "^10.1.0",
    "eslint": "^8.55.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "shipping",
    "logistics",
    "accounting",
    "erp",
    "libya",
    "arabic",
    "multilingual",
    "postgresql",
    "nodejs",
    "express"
  ],
  "author": "Golden Horse Shipping Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
